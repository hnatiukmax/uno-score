<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Unoscore" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="buttonPrimary">@style/Widget.Button.Primary</item>
        <item name="buttonChip">@style/Widget.Button.Chip</item>
        <item name="inputFilled">@style/Widget.EditText.Filled</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Button.Primary">
        <item name="android:layout_height">@dimen/buttonPrimaryHeight</item>
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/uno_blue</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="Widget.Button.Chip" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">38dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="background">@color/uno_blue</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="GlobalButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">300dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.FinalScoreInput" parent="@android:style/Widget.EditText">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/small_margin</item>
        <item name="android:textColorHint">@color/text_color_thirdly</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/uno_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">@dimen/edit_text_filled_height</item>
        <item name="android:background">@drawable/background_filled_edit_text</item>
    </style>

    <style name="Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/medium_margin</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColorHint">@color/text_color_thirdly</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.EditText.Outlined">
        <item name="android:layout_height">@dimen/edit_text_outlined_height</item>
        <item name="android:background">@drawable/background_outlined_edit_text</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="Widget.EditText.Filled">
        <item name="android:layout_height">@dimen/edit_text_filled_height</item>
        <item name="android:background">@drawable/background_filled_edit_text</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

</resources>