<resources>

    <style name="Theme.Unoscore" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="buttonPrimary">@style/Widget.Button.Primary</item>
        <item name="buttonSecondary">@style/Widget.Button.Secondary</item>
        <item name="inputFilled">@style/Widget.EditText.Filled</item>

        <item name="title">@style/Widget.Title</item>
        <item name="titleEmpty">@style/Widget.TitleEmpty</item>
        <item name="description">@style/Widget.Description</item>

        <item name="titledValueContainer">@style/Widget.TitledValueContainer</item>
        <item name="titledValueTitle">@style/Widget.TitledValueTitle</item>
        <item name="titledValue">@style/Widget.TitledValue</item>

        <item name="finalScoreValue">@style/Widget.FinalScoreValue</item>

        <item name="playerNumber">@style/Widget.PlayerNumber</item>
        <item name="playerName">@style/Widget.PlayerName</item>
        <item name="playerRoundResult">@style/Widget.PlayerRoundResult</item>

        <item name="loserName">@style/Widget.LoserName</item>
    </style>

    <style name="Widget" />

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Button.Primary">
        <item name="android:layout_height">@dimen/buttonPrimaryHeight</item>
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/uno_blue</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="Widget.Button.Secondary">
        <item name="android:layout_height">@dimen/buttonPrimaryHeight</item>
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/button_secondary</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="Widget.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="Widget.TitleEmpty">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_thirdly</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Widget.Description">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Widget.TitledValueContainer">
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingHorizontal">@dimen/small_margin</item>
        <item name="android:paddingVertical">@dimen/extra_small_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_title_value_container</item>
    </style>

    <style name="Widget.TitledValueTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_thirdly</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Widget.TitledValue">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.FinalScoreValue">
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/small_margin</item>
        <item name="android:paddingVertical">@dimen/extra_small_margin</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">@dimen/edit_text_filled_height</item>
        <item name="android:background">@drawable/background_final_score_suggestion</item>
        <item name="android:minWidth">54dp</item>
        <item name="android:maxWidth">64dp</item>
        <item name="android:maxLength">4</item>
    </style>

    <style name="Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/medium_margin</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColorHint">@color/text_color_thirdly</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.EditText.Filled">
        <item name="android:layout_height">@dimen/edit_text_filled_height</item>
        <item name="android:background">@drawable/background_filled_edit_text</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

    <style name="Widget.PlayerNumber">
        <item name="android:background">@drawable/background_player_number</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.PlayerName" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">#131517</item>
        <item name="android:background">@drawable/background_title_value_container</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:maxWidth">95dp</item>
        <item name="android:paddingHorizontal">@dimen/small_margin</item>
        <item name="android:paddingVertical">@dimen/extra_small_margin</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="Widget.PlayerRoundResult">
        <item name="android:background">@drawable/background_item_round_result</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Widget.LoserName">
        <item name="android:background">@drawable/background_title_value_container</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingHorizontal">@dimen/small_margin</item>
        <item name="android:paddingVertical">@dimen/extra_small_margin</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>